{
  "travel_database": {
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "date": {
          "type": "date"
        },
        "amount": {
          "type": "long",
          "description": "Original currency amount (JPY, TWD, etc.)"
        },
        "amount_hkd": {
          "type": "long",
          "description": "Converted amount in HKD - USE THIS FOR ALL CALCULATIONS"
        },
        "currency": {
          "type": "keyword",
          "description": "Original currency code (JPY, TWD, HKD)"
        },
        "category": {
          "type": "keyword",
          "description": "Expense category in Chinese: 住宿, 餐飲, 交通, 購物, 景點"
        },
        "location": {
          "type": "keyword",
          "description": "Travel location in Chinese: 東京, 大阪, 福岡, 台中"
        },
        "trip_id": {
          "type": "keyword",
          "description": "Trip identifier (e.g., 2023-04-tokyo)"
        },
        "merchant": {
          "type": "text",
          "description": "Merchant or vendor name"
        },
        "notes": {
          "type": "keyword",
          "description": "Additional notes about the expense"
        }
      }
    }
  }
}
